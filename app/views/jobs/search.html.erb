<div id="search-page" class=" jobs-show-page navbar-margin">
  <div >
    <br>
    <br>
    <div class="pull-right ">
      <%= link_to(content_tag(:i, " Check All Jobs", class: "fa fa-reply-all"), jobs_path) %> |
      <%= link_to(content_tag(:i, " Back", class: "fa fa-arrow-left"), url_for(:back)) %>
    </div>
    <% if @jobs.blank?%>
      <br>
      <div class="img-match-parent">
        
      </div>
    <% else %>
      <h3>Total find <%= @jobs.count %> jobs</h3>
      <div class="divider"></div>
      <%= render :partial => "jobs_item", :collection => @jobs, :as => :job %>
      <div class="text-center">
        <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
      </div>
    <% end %>
    
  </div>
</div>
